@model X.PagedList.IPagedList<Peliculas.Core.Pelicula>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Peliculas - Home";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<div class="text-center mb-4">
    <h1 class="display-4">Bienvenido a Películas</h1>
    <br />
    <p>
        <a asp-action="Create" asp-controller="Home" class="btn btn-primary">Insertar Película</a>
    </p>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Director</th>
            <th>Año</th>
            <th>Puntuación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pelicula in Model)
        {
            <tr>
                <td>@pelicula.Titulo</td>
                <td>@pelicula.Director</td>
                <td>@pelicula.Anio</td>
                <td>@pelicula.Puntuacion</td>
                <td>
                    <a asp-action="Edit" asp-controller="Home" asp-route-id="@pelicula.Id" class="btn btn-sm btn-success">Editar</a>
                    <a asp-action="Delete" asp-controller="Home" asp-route-id="@pelicula.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-center mt-3">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
    {
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" },
        UlElementClasses = new[] { "pagination" }
    })
</div>