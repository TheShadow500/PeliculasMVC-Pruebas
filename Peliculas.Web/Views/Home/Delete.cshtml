@model Peliculas.Core.Pelicula

<h2>Eliminar Película</h2>

<h3>¿Seguro que deseas eliminar esta película?</h3>
<div>
    <p><strong>Título:</strong> @Model.Titulo</p>
    <p><strong>Director:</strong> @Model.Director</p>
    <p><strong>Año:</strong> @Model.Anio</p>
    <p><strong>Puntuación:</strong> @Model.Puntuacion</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-primary">Cancelar</a>
</form>